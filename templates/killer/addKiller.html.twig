{% extends 'base.html.twig' %}

{% block title %}Add Killer{% endblock %}

{% block body %}
    <div class="container">
        <div class="d-flex justify-content-center">

        {% if editMode %}
            <h4 class="mb-5"> Modification de l'ID Killer =  <span class="text-info">{{ editMode }}</span></h4>
        {% else %}
        {# Sinon editMode ne contient aucun ID d'article, il renvoi FALSE, alors c'est une insertion, on entre dans le ESLE #}
            <h4 class="mb-5">Cr√©ation d'un nouveau Killer</h4>
        {% endif %}
        </div>
    <div>
    {{ form_start(form) }}
        <form>
            <div class="form-group col-12 d-flex justify-content-around ">
                {{ form_row(form.name) }}
            </div>
            <div class="form-group col-12">
                {{ form_row(form.categories) }}
            </div>

    {{ form_end(form) }}
    </div>

{% endblock %}