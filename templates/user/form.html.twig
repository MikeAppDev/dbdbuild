{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}

    <div class="container">
        <div class="d-flex justify-content-center">
        {% if editMode %}
            <h1>Modification User =  <span class="text-info">{{ editMode }}</span></h1>
        {% else %}
            <h1> New User </h1>
        {% endif %}
    </div>

<div>
    {{ form_start(form) }}
        <form>
            <div class="form-group col-12 d-flex justify-content-between flex-row align-items-center">
                {{ form_row(form.email) }}
                {{ form_row(form.firstName) }}
                {{ form_row(form.name) }}
            </div>

            <div class="form-group col-md-auto">
                {# <div class="col-2"> / </div> #}
                    <div class="col-md-auto">{{ form_row(form.adresse) }}</div>
                {# <div class="col-2"> \ </div> #}
            </div>
            
            <div class="form-group col-12 d-flex justify-content-around flex-row align-items-center">
                {{ form_row(form.CP) }}
                {{ form_row(form.city) }}
            </div>

            <div class="d-flex justify-content-center mt-5">
                <button type="submit" class="btn btn-secondary mb-5">
                {% if editMode %}
                    Enregistrer les modifications
                {% else %}
                    Enregistrer
                {% endif %}
                </button>
            </div>

    {{ form_end(form) }}
</div>

{% endblock %}