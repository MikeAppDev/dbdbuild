{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}

    <div class="container">
        <div class="d-flex justify-content-center">
            {% if editMode %}
                <h1>Modification du Build ID =  <span class="text-info">{{ editMode }}</span></h1>
            {% else %}
                <h1> ADD New Build </h1>
            {% endif %}
        </div>

        <div>
            {{ form_start(form) }}
                <form>
                    <div class="form-group col-12 d-flex justify-content-around ">
                        {{ form_row(form.title) }} {{ form_row(form.slug) }}
                    </div>
                    <div class="form-group col-12 d-flex justify-content-around flex-row">
                         {{ form_row(form.categories) }}
                    </div>
                    
                    <div class="form-group ">
                        {{ form_row(form.content) }}
                    </div>
                    <div class="form-group ">
                        {{ form_row(form.image) }}
                    </div>
                    
                    {% if imageBuild %}
                        <p class="mt-3">
                            <em class="pb-2">Vous pouvez uploder une image si vous souhaitez la modifier</em><br><br>
                            <img src="{{ asset('uploads/images/' ~ imageBuild) }}" alt="" class="col-md-3 rounded shadow-lg">
                        </p>
                    {% endif %}

                    <div class="form-group col-12 d-flex justify-content-around flex-row align-items-center">
                        {{ form_row(form.perk1) }}
                        {{ form_row(form.killers) }}
                    </div>
                    <div class="form-group col-12 d-flex justify-content-around flex-row">
                        
                    </div>
                {{ form_end(form) }}

        </div>
    </div>
        </form>

{% endblock %}