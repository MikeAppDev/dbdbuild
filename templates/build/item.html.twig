{% set build_show = path('build_show', {'slug': build.slug }) %}


<article class="mb-5">
    <div class="row">
        <div class="col-md-{{ leftCol ?? 5 }}">
            {% if build.featuredImage %}
                <a href="{{ build_show }}">
                    <img src="/uploads/{{ build.featuredImage.filename }}" alt="{{ build.featuredImage.altText }}" loading="lazy" width="350" height="200">
                </a>
            {% endif %}
        </div>
        <div class="col-md-{{ rightCol ?? 7 }}">
            <h3 class="">
                <a class="text-decoration-none" href="{{ build_show }}" class="text-decortion-none">{{ build.title }}</a>
            </h3>
            {{ build.featuredText ?: build.content|striptags|slice(0,130) ~ '...' }}
            <p>
                {{ build.createdAt|date('d M Y') }}
            </p>
        </div>
    </div>

</article>