{% set build_show = path('build_show', {'id': build.id }) %}


<article class="mb-5">
    <div class="row d-flex align-items-center">
        <div class="col-md-{{ leftCol ?? 5 }}">
                <a href="{{ build_show }}">
                    <img src="{{ asset('image/build/' ~ build.image) }}" alt="{{ build.title }}" class="col-10" loading="lazy" width="300" height="200">

                </a>
        </div>
        <div class="col-md-{{ rightCol ?? 7 }}">
            <h3 class="">
                <a class="text-decoration-none" href="{{ build_show }}" class="text-decortion-none">{{ build.title }}</a>
            </h3>
            {{ build.featuredText ?: build.content|striptags|slice(0,130) ~ '...' }}
            <p>
                {{ build.createdAt|date('d M Y') }}
            </p>
        </div>
    </div>

</article>