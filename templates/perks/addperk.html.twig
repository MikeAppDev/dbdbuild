{% extends 'base.html.twig' %}

{% block title %}Hello PerksController!{% endblock %}

{% block body %}

    <div class="container">
        <div class="d-flex justify-content-center">
        {% if editMode %}
            <h1>Modification de la perk ID =  <span class="text-info">{{ editMode }}</span></h1>
        {% else %}
            <h1> ADD New Perk </h1>
        {% endif %}
    </div>

    <div>
    {{ form_start(form) }}
    
    <form>
        <div class="form-group col-12 d-flex justify-content-around ">
            {{ form_row(form.name) }}
        </div>
        <div class="form-group ">
            {{ form_row(form.description) }}
        </div>
        <div class="form-group ">
            {{ form_row(form.image) }}
        </div>
                {% if imagePerk %}
                    <p class="mt-3">
                        <em class="pb-2">Vous pouvez uploder une image si vous souhaitez la modifier</em><br><br>
                        <img src="{{ asset('uploads/images/' ~ imagePerk) }}" alt="" class="col-md-3 rounded shadow-lg">
                    </p>
                    {# {{dump(imagePerk)}} #}
                {% endif %}
        <div class="form-group ">
            {{ form_row(form.slug) }}
        </div>
        <div class="form-group col-12 d-flex justify-content-around flex-row">
            {{ form_row(form.category) }}
        </div>

    {{ form_end(form) }}
    </form>
{% endblock %}
